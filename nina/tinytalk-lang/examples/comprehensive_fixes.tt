blueprint ComprehensiveTest
  starts result at 0
  starts message at ""

when test_negative_literals
  calc -10 plus 5 as sum1
  calc -3.14 times 2 as product
  set result to sum1
  set Screen.text to "Negative literals work"
finfr "Negative literals tested"

when test_parameters(x, y, z)
  calc x plus y as temp
  calc temp plus z as total
  set result to total
  set message to "Parameters bound correctly"
finfr message

when show_result
  set Screen.text to "All tests passed"
finfr "Complete"
