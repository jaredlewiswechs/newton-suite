{
  "name": "tinytalk",
  "displayName": "TinyTalk",
  "description": "TinyTalk language support â€” The No-First programming language. Syntax highlighting, snippets, and run support.",
  "version": "0.1.0",
  "publisher": "newton-supercomputer",
  "author": {
    "name": "Newton Supercomputer"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/newton-supercomputer/tinytalk"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "keywords": [
    "tinytalk",
    "newton",
    "no-first",
    "constraint",
    "verification"
  ],
  "icon": "images/tinytalk-icon.png",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:tinytalk"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tinytalk",
        "aliases": ["TinyTalk", "tinytalk", "tt"],
        "extensions": [".tt", ".tinytalk"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/tinytalk-file.png",
          "dark": "./images/tinytalk-file.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "tinytalk",
        "scopeName": "source.tinytalk",
        "path": "./syntaxes/tinytalk.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "tinytalk",
        "path": "./snippets/tinytalk.json"
      }
    ],
    "commands": [
      {
        "command": "tinytalk.run",
        "title": "Run TinyTalk File",
        "category": "TinyTalk",
        "icon": "$(play)"
      },
      {
        "command": "tinytalk.runSelection",
        "title": "Run Selection",
        "category": "TinyTalk"
      },
      {
        "command": "tinytalk.transpileJS",
        "title": "Transpile to JavaScript",
        "category": "TinyTalk"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "tinytalk.run",
          "when": "resourceLangId == tinytalk",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "tinytalk.runSelection",
          "when": "resourceLangId == tinytalk && editorHasSelection",
          "group": "1_run"
        }
      ]
    },
    "keybindings": [
      {
        "command": "tinytalk.run",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "resourceLangId == tinytalk"
      }
    ],
    "configuration": {
      "title": "TinyTalk",
      "properties": {
        "tinytalk.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python interpreter for running TinyTalk"
        },
        "tinytalk.showOutputOnRun": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show output panel when running"
        },
        "tinytalk.enableLinting": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time syntax checking"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  }
}
