{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TinyTalk",
  "scopeName": "source.tinytalk",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#steps" },
    { "include": "#properties" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.tinytalk",
          "match": "--.*$"
        },
        {
          "name": "comment.block.tinytalk",
          "begin": "--\\[\\[",
          "end": "\\]\\]"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tinytalk",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tinytalk",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.tinytalk",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.tinytalk",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.tinytalk",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.hex.tinytalk",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.integer.binary.tinytalk",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.integer.tinytalk",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.tinytalk",
          "match": "\\b(true|false|yes|no)\\b"
        },
        {
          "name": "constant.language.null.tinytalk",
          "match": "\\b(null|nil|nothing|void)\\b"
        },
        {
          "name": "constant.language.special.tinytalk",
          "match": "\\b(infinity|nan|pi|e|tau)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tinytalk",
          "match": "\\b(if|elif|else|for|while|loop|break|continue|return|reply|do|end|in|match|case)\\b"
        },
        {
          "name": "keyword.declaration.tinytalk",
          "match": "\\b(let|when|law|forge|blueprint|field|struct|fn|func|function)\\b"
        },
        {
          "name": "keyword.sacred.tinytalk",
          "match": "\\b(fin|finfr|ratio|and|or|not)\\b"
        },
        {
          "name": "keyword.import.tinytalk",
          "match": "\\b(import|from|as|use|require)\\b"
        },
        {
          "name": "keyword.other.tinytalk",
          "match": "\\b(new|self|this|super|is|has|to|with|where|given)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.tinytalk",
          "match": "(==|!=|<=|>=|<|>|is|has)"
        },
        {
          "name": "keyword.operator.arithmetic.tinytalk",
          "match": "(\\+|-|\\*|/|%|\\^|\\*\\*)"
        },
        {
          "name": "keyword.operator.assignment.tinytalk",
          "match": "(=|\\+=|-=|\\*=|/=)"
        },
        {
          "name": "keyword.operator.logical.tinytalk",
          "match": "(&&|\\|\\||!|and|or|not)"
        },
        {
          "name": "keyword.operator.pipe.tinytalk",
          "match": "(\\|>|->|=>)"
        },
        {
          "name": "keyword.operator.range.tinytalk",
          "match": "\\.\\."
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.builtin.tinytalk",
          "match": "\\b(show|print|println|input|type|len|str|int|float|bool|list|map|set|range|abs|min|max|sum|avg|round|floor|ceil|sqrt|sin|cos|tan|log|exp|random|time|sleep|read|write|open|close|assert|debug|trace)\\b"
        },
        {
          "name": "entity.name.function.tinytalk",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.tinytalk",
          "match": "\\b(String|Number|Boolean|List|Map|Set|Function|Any|Void|Option|Result)\\b"
        }
      ]
    },
    "steps": {
      "patterns": [
        {
          "name": "entity.name.function.step.tinytalk",
          "match": "\\s_([a-zA-Z][a-zA-Z0-9_]*)\\b",
          "captures": {
            "0": { "name": "entity.name.function.step.tinytalk" }
          }
        }
      ]
    },
    "properties": {
      "patterns": [
        {
          "name": "variable.other.property.tinytalk",
          "match": "\\.([a-zA-Z_][a-zA-Z0-9_]*)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.tinytalk",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
